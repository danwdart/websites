executable submit-comment
  hs-source-dirs:      src
  main-is:             submit-comment.hs
  default-language:    Haskell2010
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:       
      base >= 4.7 && < 5
    , aeson
    , amazonka-core
    , base64
    , bytestring
    , github-rest
    , http-types
    , serverless-haskell
    , text
    , time

executable submit-review-comment
  hs-source-dirs:      src
  main-is:             submit-review-comment.hs
  default-language:    Haskell2010
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
