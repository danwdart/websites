extra-source-files:  README.md

executable build-websites
  hs-source-dirs:      src
  main-is:             build-websites.hs
  default-language:    Haskell2010
  build-depends:       
      base >= 4.7 && < 5
    , aeson
    , blaze-html
    , blaze-markup
    , bytestring
    , Cabal
    , cheapskate
    , directory
    , feed
    , filepath
    , frontmatter
    , fsutils
    , mmark
    , mtl
    , req
    , text
    , time
    , wai
    , wai-app-static
    , wai-extra
    , warp
    , xml-conduit
  other-modules:
      Blog.Comment
    , Blog.Feed
    , Blog.Link
    , Blog.Post
    , Blog.Types
    , Build.Utils
    , Data.Blog
    , Data.DanDart
    , Data.JolHarg
    , Data.M0ORI
    , Html.Blog.Index
    , Html.Common.Audio
    , Html.Common.CSS
    , Html.Common.Card
    , Html.Common.GitHub
    , Html.Common.Head
    , Html.Common.Link
    , Html.Common.Shortcuts
    , Html.Common.Social
    , Html.Common.Utils
    , Html.DanDart.Index
    , Html.JolHarg.Index
    , Html.M0ORI.Index
    , Site.Blog
    , Site.DanDart
    , Site.JolHarg
    , Site.M0ORI
    , Util.List
    , Util.Time
    , Util.Triple

executable submit-comment
  hs-source-dirs:      src
  main-is:             submit-comment.hs
  default-language:    Haskell2010
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:       
      base >= 4.7 && < 5
    , aeson
    , amazonka-core
    , base64
    , bytestring
    , github-rest
    , http-types
    , serverless-haskell
    , text
    , time

test-suite e2e
  hs-source-dirs:      src
  type:                detailed-0.9
  test-module:         Test.E2E.Main
  default-language:    Haskell2010
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:       
      base >= 4.7 && < 5
    , aeson
    , Cabal
    , data-default
    , directory
    , filepath
    , QuickCheck
    , text
    , transformers
    , transformers-base
    , webdriver